<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.managerworkofstatecadres.profile.Support">
    <TextView
        android:id="@+id/textview"
        android:layout_width="392dp"
        android:layout_height="112dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"

        android:text="Welcome to our support program because this is a demo application, so we can't fully develop the features, hope you understand."
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:background="@color/teal_200"
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:gravity="center"
        tools:ignore="MissingConstraints" />
</LinearLayout>
</LinearLayout>