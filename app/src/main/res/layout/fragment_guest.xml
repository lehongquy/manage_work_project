<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragguest"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context="com.example.managerworkofstatecadres.qr.">
    <ImageView
    android:id="@+id/showqr"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="end|top"
    android:background="@color/white"
    android:src="@drawable/ic_baseline_qr_code_2_24" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/boder"
            android:src="@drawable/creeateaccount" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="34dp"
            android:weightSum="7">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/boder"
                android:gravity="center"
                android:paddingHorizontal="50dp"
                android:text="Find Account"
                android:textColor="@color/purple_500"
                android:textSize="20dp"
                android:textStyle="italic|bold"
                app:cornerRadius="20dp" />


            <EditText
                android:id="@+id/id_inputphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:hint="User"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <EditText
                android:id="@+id/id_inputpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/id_find"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Find"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/teal_200"
                android:gravity="center"


                >

                <TextView
                    android:id="@+id/infor_guest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@color/teal_200"
                    android:gravity="center"
                    android:paddingHorizontal="50dp"
                    android:text="Find Account"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</FrameLayout>