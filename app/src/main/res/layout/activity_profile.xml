<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.example.managerworkofstatecadres.profile.profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backlogin"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="130dp">
       <ImageView
           android:layout_width="match_parent"
           android:id="@+id/imagepro"
           android:layout_height="match_parent"
           android:src="@drawable/account"/>
        </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:weightSum="2"
               android:orientation="horizontal">
               <TextView
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Name"
                   android:id="@+id/namepro"/>
               <TextView
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Position"
                   android:id="@+id/positionpro"/>
           </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/phonepro"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:id="@+id/gmailpro"/>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="5"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#77E166"
            android:textSize="20dp"
            android:id="@+id/reward"
            android:text="Reward and Discipline"
           />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"
                android:background="#77E166"
                android:id="@+id/change"
                android:text="Change Password"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Support"
                android:gravity="center"
                android:background="#77E166"
                android:id="@+id/support"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#77E166"
                android:id="@+id/setting"
                android:textSize="20dp"
                android:text="Setting"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#77E166"
                android:id="@+id/signout"
                android:textSize="20dp"
                android:text="Signout"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5.5"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_list_alt_24"
            android:id="@+id/listwork3"/>
        <ImageView
            android:layout_weight="1"

            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_airport_shuttle_24"
            android:id="@+id/listvehicle3"/>
        <ImageView
            android:layout_weight="1.5"

            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:id="@+id/qr3"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:src="@drawable/ic_baseline_add_alert_24"
            android:id="@+id/listnotification3"/>
        <ImageView
            android:layout_weight="1"

            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24"
          />
    </LinearLayout>
    </LinearLayout>
